VECTORFLOW_DOMAIN=vectorflow.profikid.nl
GRAFANA_DOMAIN=grafana.vectorflow.profikid.nl

# Must match the shared Docker network that your Traefik container is attached to.
TRAEFIK_NETWORK=proxy
TRAEFIK_CERT_RESOLVER=mytlschallenge

POSTGRES_USER=flow_admin
POSTGRES_PASSWORD=change-me-strong-password
POSTGRES_DB=flow_db

GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=change-me-strong-password

# Keep true if you want dashboards embedded in the frontend without a login.
GRAFANA_ANONYMOUS_ENABLED=true
GRAFANA_ANONYMOUS_ORG_ROLE=Viewer

# Prebuilt during deploy; the API also uses this tag for per-stream worker containers.
WORKER_IMAGE=vectorflow-worker:latest
